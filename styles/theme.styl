@import url('https://fonts.googleapis.com/css?family=Montserrat:700');
@import url('https://fonts.googleapis.com/css?family=Open+Sans:400,700,400italic,700italic');

body
  background #111111
  background-color #111111

transition-mixin()
  -webkit-transition arguments
  -moz-transition arguments
  -ms-transition arguments
  -o-transition arguments
  transition arguments

border-radius-mixin()
  -webkit-border-radius arguments
  -moz-border-radius arguments
  -khtml-border-radius arguments
  border-radius arguments

::selection
  color white
  background #e7ad52
  text-shadow none

.reveal
  font-family "Open Sans", sans-serif
  font-size 30px
  font-weight normal
  letter-spacing -0.02em
  color #eeeeee

  h1, h2, h3, h4, h5, h6
    margin 0 0 20px 0
    color #eeeeee
    font-family "Montserrat", Impact, sans-serif
    line-height 0.9em
    letter-spacing -0.03em
    text-transform none
    text-shadow none
    a
      color #eee
      text-decoration none

  h1
    text-shadow 0px 0px 6px rgba(0, 0, 0, 0.2)
    font-size 3.3em

    &.main-icon
      span
        font-size 256px

  a
    &:not(.image)
      color #e7ad52
      text-decoration none
      transition-mixin color .15s ease
    &:not(.image):hover
      color #f3d7ac
      text-shadow none
      border none
    &:hover
      img
        background rgba(255, 255, 255, 0.2)
        border-color #e7ad52
        box-shadow 0 0 20px rgba(0, 0, 0, 0.55)
  .roll
    span
      &:after
        color #fff
        background #d08a1d
  section
    img
      margin 15px 0px
      background rgba(255, 255, 255, 0.12)
      border 4px solid #eeeeee
      box-shadow 0 0 10px rgba(0, 0, 0, 0.15)
      transition-mixin all .2s linear

  controlsColor = #eee
  .controls
    div.navigate-left, div.navigate-left.enabled
      border-right-color controlsColor
    div.navigate-right, div.navigate-right.enabled
      border-left-color controlsColor
    div.navigate-up, div.navigate-up.enabled
      display none
    div.navigate-down, div.navigate-down.enabled
      display none

  .progress
    background rgba(0, 0, 0, 0.2)
    span
      background #eee
      transition-mixin width 800ms cubic-bezier(0.26, 0.86, 0.44, 0.985)

  .slide-number
    color #e7ad52

  tilePadding = 8px
  tileSize = 128px
  tileMargin = 32px

  .tile, .tile-inner
    position relative
    width tileSize
    height tileSize
    border-radius-mixin 32px

  .tile
    margin tileMargin
    display inline-block
    position relative
    cursor pointer
    background-color rgba(0,0,0,0.15)

  .tile-inner
    .icon
      padding-top tilePadding
      span
        font-size 64px
    .label
      font-size 18px
      line-height 1
      position absolute
      bottom tilePadding
      right tilePadding
      left tilePadding

  .tile.selected
    .tile-inner
      left -16px
      top -16px

  .tiles
    margin 0 auto
    tileSizeAndMargin = tileSize + 2 * tileMargin
    &.max-fit-2
      width tileSizeAndMargin * 2
    &.max-fit-3
      width tileSizeAndMargin * 3
    &.max-fit-4
      width tileSizeAndMargin * 4
    &.max-fit-5
      width tileSizeAndMargin * 5

  color-mixin(c)
    .tile-inner
      background-color c
    h1, h2
      text-shadow 3px 2px 0 c , 6px 5px 0 rgba(0,0,0,0.15)

  .color-0
    color-mixin #2ecd71
  .color-1
    color-mixin #1bbc9b
  .color-2
    color-mixin #59ACE2
  .color-3
    color-mixin #9b58b5
  .color-4
    color-mixin #34495e
  .color-5
    color-mixin #f1c40f
  .color-6
    color-mixin #e77e23
  .color-7
    color-mixin #e84c3d
  .color-8
    color-mixin #abb7b7

  // Icon font fix. This is from the icomoon file. It's needed here because
  // Reveal.js fucks with everything in `.reveal span`.
  span
    &[class^="icon-"]
      font-family 'icomoon'
      speak none
      font-style normal
      font-weight normal
      font-variant normal
      text-transform none
      line-height 1
      -webkit-font-smoothing antialiased
      -moz-osx-font-smoothing grayscale

  .author
    hr
      width 30%
      border 1px solid #555
      margin 3em auto 1em auto
    p
      margin-bottom 0

#race
  .icon-wink
    color #FCFC5B
  .icon-happy
    color #ffffff
  .icon-cool
    color #313131
  .icon-smiley
    color #A07B43
  .icon-tongue
    color #CC4848
  .icon-alienware
    color #2E8A40

body
  position relative
#score
  position absolute
  left 20px
  bottom 50px
  color #eee
  font-family "Montserrat", Impact, sans-serif
  font-size 30px


